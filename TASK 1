class Solution {
    public boolean halvesAreAlike(String s) {
        int n=s.length()/2;
        int countA=0,countB=0;

        for(int i=0;i<n;i++){
            if(isVowel(s.charAt(i))){
                countA++;
            }
            if(isVowel(s.charAt(i+n))){
                countB++;
            }
        }
            return countA==countB;
        }
        private boolean isVowel(char ch){
            return "aeiouAEIOU".indexOf(ch)!= -1;
        }
   }
